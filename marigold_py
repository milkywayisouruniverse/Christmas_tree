import turtle

# Setup
screen = turtle.Screen()
screen.bgcolor("skyblue")

flower = turtle.Turtle()
flower.speed(0)
flower.width(2)

# Stem
flower.penup()
flower.goto(0, -200)
flower.pendown()
flower.color("green")
flower.setheading(90)
flower.forward(200)

# Leaves
flower.setheading(45)
flower.forward(80)
flower.backward(80)
flower.setheading(135)
flower.forward(80)
flower.backward(80)

# Move to flower head
flower.penup()
flower.goto(0, 0)
flower.setheading(0)
flower.pendown()

# Petals
flower.color("yellow")
for _ in range(6):
    flower.circle(60, 60)
    flower.left(120)
    flower.circle(60, 60)
    flower.left(60)

# Center trumpet
flower.penup()
flower.goto(0, -20)
flower.pendown()
flower.color("orange")

flower.begin_fill()
flower.circle(25)
flower.end_fill()

# Finish
flower.hideturtle()
screen.mainloop()
